{
  "name": "hrms-api",
  "version": "1.0.0",
  "description": "HRMS API for employee management",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop hrms-api",
    "pm2:restart": "pm2 restart hrms-api",
    "pm2:delete": "pm2 delete hrms-api",
    "pm2:logs": "pm2 logs hrms-api",
    "pm2:monit": "pm2 monit",
    "deploy:prod": "pm2 start ecosystem.config.js --env production",
    "setup:logs": "mkdir -p logs"
  },
  "keywords": [
    "hrms",
    "api",
    "nodejs",
    "mysql",
    "employee"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
